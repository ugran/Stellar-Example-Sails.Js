<p style='font-weight:bold;'>CHECK BALANCE OF AN ACCOUNT:</p>
<form action="/" method="get">
    <div class="form-group">
        <label for="address">Account Address</label>
        <input type="text" class="form-control" id="show_account_balance" aria-describedby="addressHelp" placeholder="Address" name="show_account_balance">
        <small id="addressHelp" class="form-text text-muted">Enter Account Address to check its balance.</small>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<p style='font-weight:bold; margin-top:30px;'>Create New Account:</p>
<form action="/" method="get">
    <div class="form-group">
        <input type="text" class="form-control" id="create_new_account_publickey" aria-describedby="addresstoHelp" placeholder="Address-To" name="create_new_account_publickey">
        <small id="addresstoHelp" class="form-text text-muted">Enter Account Address you want o create account.</small>
    </div>
    <div class="form-group">
        <input type="text" class="form-control" id="address_from_create" aria-describedby="addressfromcreateHelp" placeholder="Address-From" name="address_from_create">
        <small id="addressfromcreateHelp" class="form-text text-muted">Enter Account Address from which you want to create account.</small>
    </div>
    <div class="form-group">
        <input type="text" class="form-control" id="starting_balance" aria-describedby="startingbalanceHelp" placeholder="Starting Balance" name="starting_balance">
        <small id="startingbalanceHelp" class="form-text text-muted">Enter the balance (XLM) you want new account to be created. Will be taken from creator account.</small>
    </div>
    <div class="form-group">
        <input type="text" class="form-control" id="secret_key_create" aria-describedby="secretkeycreateHelp" placeholder="Secret Key" name="secret_key_create">
        <small id="secretkeycreateHelp" class="form-text text-muted">Enter the sender's secret key.</small>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<% if (typeof accounts != "undefined") { %>
    <p><%= accounts %></p>
<% } %>